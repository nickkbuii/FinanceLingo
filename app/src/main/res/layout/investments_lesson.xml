<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#685196"
    tools:context="InvestmentsLesson">

    <ImageView
        android:id="@+id/inv_imageView4"
        android:layout_width="343dp"
        android:layout_height="501dp"
        android:background="@drawable/purple_square"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.9"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.131"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/inv_Text"
        android:layout_width="308dp"
        android:layout_height="181dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/sf_arch_rival_bold"
        android:gravity="center"
        android:text="Investing is to ____ ____ that would hopefully yield ____."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/inv_button1"
        app:layout_constraintEnd_toEndOf="@+id/inv_imageView4"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="@+id/inv_imageView4"
        app:layout_constraintTop_toTopOf="@+id/inv_imageView4"
        app:layout_constraintWidth_percent="0.65" />

    <ToggleButton
        android:id="@+id/inv_button1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/toggledbutton"
        android:checked="false"
        android:focusable="auto"
        android:fontFamily="@font/sf_arch_rival_bold"
        android:text="things"
        android:textColor="@color/black"
        android:textOff="things"
        android:textOn="things"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/inv_button2"
        app:layout_constraintEnd_toEndOf="@+id/inv_imageView4"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/inv_imageView4"
        app:layout_constraintTop_toBottomOf="@+id/inv_Text"
        app:layout_constraintWidth_percent="0.65" />

    <ToggleButton
        android:id="@+id/inv_button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/toggledbutton"
        android:fontFamily="@font/sf_arch_rival_bold"
        android:text="profit"
        android:textColor="@color/black"
        android:textOff="profit"
        android:textOn="profit"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/inv_button3"
        app:layout_constraintEnd_toEndOf="@+id/inv_imageView4"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintStart_toStartOf="@+id/inv_imageView4"
        app:layout_constraintTop_toBottomOf="@+id/inv_button1"
        app:layout_constraintWidth_percent="0.65" />

    <ToggleButton
        android:id="@+id/inv_button3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/toggledbutton"
        android:fontFamily="@font/sf_arch_rival_bold"
        android:text="purchase"
        android:textColor="@color/black"
        android:textOff="purchase"
        android:textOn="purchase"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/inv_checkAnswer"
        app:layout_constraintEnd_toEndOf="@+id/inv_imageView4"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintStart_toStartOf="@+id/inv_imageView4"
        app:layout_constraintTop_toBottomOf="@+id/inv_button2"
        app:layout_constraintWidth_percent="0.65" />

    <Button
        android:id="@+id/inv_checkAnswer"
        android:layout_width="266dp"
        android:layout_height="43dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/sf_arch_rival_bold"
        android:text="Check Answer"
        android:textSize="15dp"
        app:backgroundTint="#9CC888"
        app:layout_constraintBottom_toBottomOf="@+id/inv_imageView4"
        app:layout_constraintEnd_toEndOf="@+id/inv_imageView4"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/inv_imageView4"
        app:layout_constraintTop_toBottomOf="@+id/inv_button3"
        app:layout_constraintWidth_percent="0.65" />

    <ImageView
        android:id="@+id/inv_pigPic"
        android:layout_width="272dp"
        android:layout_height="254dp"
        android:layout_marginStart="-70dp"
        android:layout_marginBottom="-64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pig_book" />

</androidx.constraintlayout.widget.ConstraintLayout>