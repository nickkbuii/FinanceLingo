<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green"
    tools:context=".ReadingTemplate">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/purple_square"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/quotes"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:layout_constraintWidth_percent="0.25" />

    <ImageView
        android:layout_width="285dp"
        android:layout_height="447dp"
        android:layout_marginStart="-40dp"
        android:layout_marginBottom="-40dp"
        android:background="@drawable/pig_book"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.63" />

    <TextView
        android:id="@+id/defRecommended"
        android:layout_width="153dp"
        android:layout_height="23dp"
        android:clickable="true"
        android:onClick="getDefinition"
        android:tag="Recommended"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_arch_rival_bold"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="PAGE 1/4"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <TextView
        android:id="@+id/readingBody"
        android:layout_width="157dp"
        android:layout_height="265dp"
        android:fontFamily="@font/sf_arch_rival_bold"
        android:text="50% of your income  should go to necessities. That includes bills, food, utilities, etc.."
        android:textAlignment="viewEnd"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_arch_rival_bold"
        android:text="50% RULE"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <Button
        android:id="@+id/backPage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Button"
        android:onClick="flipToPreviousPage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/defRecommended"
        app:layout_constraintWidth_percent="0.5"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/nextPage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Button"
        android:onClick="flipToNextPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5"
        tools:visibility="invisible" />


</androidx.constraintlayout.widget.ConstraintLayout>