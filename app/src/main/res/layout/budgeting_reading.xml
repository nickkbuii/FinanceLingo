<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green"
    tools:context=".ReadingTemplate">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/purple_square"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/quotes"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:layout_constraintWidth_percent="0.25" />

    <ImageView
        android:layout_width="285dp"
        android:layout_height="447dp"
        android:background="@drawable/pig_book"
        app:layout_constraintHeight_percent="0.52"
        app:layout_constraintWidth_percent="0.63"
        tools:layout_editor_absoluteX="-35dp"
        tools:layout_editor_absoluteY="318dp" />

    <TextView
        android:id="@+id/budgetingReadingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budgeting"
        android:textColor="@color/black"
        android:textSize="45dp"
        android:visibility="gone"
        tools:layout_editor_absoluteX="104dp" />

    <TextView
        android:id="@+id/budgetingReadingP1"
        android:layout_width="353dp"
        android:layout_height="95dp"
        android:text="It’s recommended that your post-tax income is spent according to the 50/30/20 rule:"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:visibility="gone"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="51dp" />

    <TextView
        android:id="@+id/budgetingReadingP2"
        android:layout_width="235dp"
        android:layout_height="296dp"
        android:text="50% Expenses: necessary payments and purchases that you can’t avoid such as your mortgage, phone payment, rent, car payments, food, tuition, insurance, utilities. \n\n 30% Savings: money that isn’t spent but rather put aside for an emergency fund, investments (stocks, real estate, 401k, IRA), paying off debt \n\n 20% Fun: the remainder of your income that goes towards non-essential things that you want such as monthly subscriptions (Netflix, Spotify, etc), travel, dining out, shopping."
        android:textColor="@color/black"
        android:textSize="22dp"
        android:visibility="gone"
        tools:layout_editor_absoluteX="231dp"
        tools:layout_editor_absoluteY="73dp" />

    <TextView
        android:id="@+id/defRecommended"
        android:layout_width="153dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="64dp"
        android:clickable="true"
        android:onClick="getDefinition"
        android:tag="Recommended"
        app:layout_constraintBottom_toBottomOf="@+id/budgetingReadingP1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/budgetingReadingP1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_arch_rival_bold"
        android:text="PAGE 1/4"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="51dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="157dp"
        android:layout_height="265dp"
        android:fontFamily="@font/sf_arch_rival_bold"
        android:text="50% of your income  should go to necessities. That includes bills, food, utilities, etc.."
        android:textAlignment="viewEnd"
        android:textColor="#000000"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="197dp"
        tools:layout_editor_absoluteY="175dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_arch_rival_bold"
        android:text="50% RULE"
        android:textColor="#000000"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="126dp" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:background="@drawable/arrow"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.4"
        tools:layout_editor_absoluteX="340dp"
        tools:layout_editor_absoluteY="700dp" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:background="@drawable/arrow"
        android:rotation="185"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.4"
        tools:layout_editor_absoluteX="268dp"
        tools:layout_editor_absoluteY="700dp" />

</androidx.constraintlayout.widget.ConstraintLayout>