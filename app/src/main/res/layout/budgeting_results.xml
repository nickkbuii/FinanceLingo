<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green"
    tools:context=".BudgetingResultsPage">

    <ImageView
        android:id="@+id/budg_results_image"
        android:layout_width="171dp"
        android:layout_height="186dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@id/budg_results_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/budgeting" />

    <TextView
        android:id="@+id/budg_results_text"
        android:layout_width="370dp"
        android:layout_height="175dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/sf_arch_rival_bold"
        android:text="Results of budgeting lesson"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/budg_results_image"
        app:layout_constraintVertical_bias="0.186" />

    <Button
        android:id="@+id/budg_results_restart"
        android:layout_width="264dp"
        android:layout_height="68dp"
        android:layout_marginBottom="8dp"
        android:onClick="restartLesson"
        android:text="Restart Lesson"
        app:backgroundTint="#7E7DBF"
        app:layout_constraintBottom_toTopOf="@+id/budg_results_backHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/budg_results_text" />

    <Button
        android:id="@+id/budg_results_backHome"
        android:layout_width="264dp"
        android:layout_height="68dp"
        android:layout_marginBottom="32dp"
        android:onClick="switchToHome"
        android:text="Back To Home"
        app:backgroundTint="#7E7DBF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/budg_results_restart" />

</androidx.constraintlayout.widget.ConstraintLayout>