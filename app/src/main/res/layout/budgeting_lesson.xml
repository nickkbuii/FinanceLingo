<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LessonTemplate"
    android:background="@drawable/gradient_background_light_green_to_green"
    >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="340dp"
        android:layout_height="673dp"
        app:srcCompat="@drawable/white_square"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="29dp" />

    <ImageView
        android:id="@+id/createLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="316dp"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/financelingo_logo" />

    <TextView
        android:id="@+id/notify"
        android:layout_width="184dp"
        android:layout_height="49dp"
        android:layout_marginTop="512dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/createLogo" />

    <Button
        android:id="@+id/createButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="420dp"
        android:checkable="false"
        android:onClick="checkCorrect"
        android:tag="incorrect"
        android:text="Yes"
        android:textAllCaps="false"
        android:textColor="#000000"
        app:backgroundTint="#00E8E8E8"
        app:iconTint="#00BCD4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3" />

    <Button
        android:id="@+id/createButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="152dp"
        android:background="@color/white"
        android:checkable="false"
        android:onClick="checkCorrect"
        android:tag="correct"
        android:text="No"
        android:textAllCaps="false"
        android:textColor="#000000"
        app:backgroundTint="#00E8E8E8"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3" />

    <Button
        android:id="@+id/createButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="324dp"
        android:background="@color/white"
        android:checkable="false"
        android:onClick="checkCorrect"
        android:tag="incorrect"
        android:text="Maybe"
        android:textAllCaps="false"
        android:textColor="#000000"
        app:backgroundTint="#00E8E8E8"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3" />

    <Button
        android:id="@+id/createButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="236dp"
        android:background="@color/white"
        android:checkable="false"
        android:onClick="checkCorrect"
        android:tag="incorrect"
        android:text="Definitely"
        android:textAllCaps="false"
        android:textColor="#000000"
        app:backgroundTint="#00E8E8E8"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3" />

    <TextView
        android:id="@+id/question"
        android:layout_width="192dp"
        android:layout_height="83dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/roboto_black"
        android:text="Is ballz big?"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="423dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:max="100"
        android:scaleY="7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>