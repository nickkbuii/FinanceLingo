<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple">


    <ImageView
        android:id="@+id/pigFieldImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="3:1.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="1"
        app:srcCompat="@drawable/lesson_bottom_screen" />

    <ImageView
        android:id="@+id/whiteCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:srcCompat="@drawable/white_square" />

    <ImageView
        android:id="@+id/orangeCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="@+id/whiteCard"
        app:layout_constraintHeight_percent="0.22"
        app:layout_constraintStart_toStartOf="@+id/whiteCard"
        app:layout_constraintTop_toTopOf="@+id/whiteCard"
        app:layout_constraintWidth_percent="0.8"
        app:srcCompat="@drawable/orange_square" />

    <ImageView
        android:id="@+id/whiteStrip"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-14dp"
        app:layout_constraintEnd_toEndOf="@+id/whiteCard"
        app:layout_constraintHeight_percent="0.02"
        app:layout_constraintStart_toStartOf="@+id/whiteCard"
        app:layout_constraintTop_toBottomOf="@+id/orangeCard"
        app:layout_constraintWidth_percent="0.8"
        app:srcCompat="@drawable/white_square_sharp_corners" />

    <TextView
        android:id="@+id/leaderboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="Leaderboard"
        android:textColor="#36373B"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@+id/orangeCard"
        app:layout_constraintStart_toStartOf="@+id/orangeCard"
        app:layout_constraintTop_toTopOf="@+id/whiteCard" />

    <TextView
        android:id="@+id/topScorer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/roboto_light"
        android:text="Brendan Lieu"
        android:textColor="#36373B"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/whiteStrip"
        app:layout_constraintEnd_toEndOf="@+id/orangeCard"
        app:layout_constraintTop_toBottomOf="@+id/leaderboardTitle" />

    <ImageView
        android:id="@+id/crownedPig"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/topScorer"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@+id/orangeCard"
        app:layout_constraintTop_toTopOf="@+id/topScorer"
        app:layout_constraintWidth_percent="0.15"
        app:srcCompat="@drawable/crownedpig" />

    <TextView
        android:id="@+id/firstPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_light"
        android:text="Brendan Lieu"
        android:textColor="#36373B"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/whiteCard"
        app:layout_constraintStart_toStartOf="@+id/whiteCard"
        app:layout_constraintTop_toBottomOf="@+id/orangeCard" />

    <TextView
        android:id="@+id/secondPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="Brendan Lieu"
        android:textColor="#36373B"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/whiteCard"
        app:layout_constraintStart_toStartOf="@+id/whiteCard"
        app:layout_constraintTop_toBottomOf="@+id/firstPlace" />

    <TextView
        android:id="@+id/thirdPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="Brendan Lieu"
        android:textColor="#36373B"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/whiteCard"
        app:layout_constraintStart_toStartOf="@+id/whiteCard"
        app:layout_constraintTop_toBottomOf="@+id/secondPlace" />

    <TextView
        android:id="@+id/fourthPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="Brendan Lieu"
        android:textColor="#36373B"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/whiteCard"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/whiteCard"
        app:layout_constraintTop_toBottomOf="@+id/thirdPlace" />

    <TextView
        android:id="@+id/fifthPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="Brendan Lieu"
        android:textColor="#36373B"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/whiteCard"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/whiteCard"
        app:layout_constraintTop_toBottomOf="@+id/fourthPlace" />

    <TextView
        android:id="@+id/sixthPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="Brendan Lieu"
        android:textColor="#36373B"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/whiteCard"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/whiteCard"
        app:layout_constraintTop_toBottomOf="@+id/fifthPlace" />

    <TextView
        android:id="@+id/number1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:fontFamily="@font/roboto_bold"
        android:text="1."
        android:textColor="#36373B"
        app:layout_constraintBottom_toBottomOf="@+id/firstPlace"
        app:layout_constraintStart_toStartOf="@+id/whiteCard"
        app:layout_constraintTop_toTopOf="@+id/firstPlace" />

    <ImageView
        android:id="@+id/goldCoin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.045"
        app:srcCompat="@drawable/gold"
        app:layout_constraintBottom_toBottomOf="@+id/number1"
        app:layout_constraintStart_toStartOf="@+id/whiteCard"
        app:layout_constraintTop_toTopOf="@+id/number1" />

    <ImageView
        android:id="@+id/silverCoin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/number2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@+id/whiteCard"
        app:layout_constraintTop_toTopOf="@+id/number2"
        app:layout_constraintWidth_percent="0.045"
        app:srcCompat="@drawable/silver" />

    <TextView
        android:id="@+id/number2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:fontFamily="@font/roboto_bold"
        android:text="2."
        android:textColor="#36373B"
        app:layout_constraintBottom_toBottomOf="@+id/secondPlace"
        app:layout_constraintStart_toStartOf="@+id/whiteCard"
        app:layout_constraintTop_toTopOf="@+id/secondPlace" />

    <TextView
        android:id="@+id/number3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:fontFamily="@font/roboto_bold"
        android:text="3."
        android:textColor="#36373B"
        app:layout_constraintBottom_toBottomOf="@+id/thirdPlace"
        app:layout_constraintStart_toStartOf="@+id/whiteCard"
        app:layout_constraintTop_toTopOf="@+id/thirdPlace" />

    <TextView
        android:id="@+id/number4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:fontFamily="@font/roboto_bold"
        android:text="4."
        android:textColor="#36373B"
        app:layout_constraintBottom_toBottomOf="@+id/fourthPlace"
        app:layout_constraintStart_toStartOf="@+id/whiteCard"
        app:layout_constraintTop_toTopOf="@+id/fourthPlace" />

    <TextView
        android:id="@+id/number5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:fontFamily="@font/roboto_bold"
        android:text="5."
        android:textColor="#36373B"
        app:layout_constraintBottom_toBottomOf="@+id/fifthPlace"
        app:layout_constraintStart_toStartOf="@+id/whiteCard"
        app:layout_constraintTop_toTopOf="@+id/fifthPlace"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/number6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:fontFamily="@font/roboto_bold"
        android:text="6."
        android:textColor="#36373B"
        app:layout_constraintBottom_toBottomOf="@+id/sixthPlace"
        app:layout_constraintStart_toStartOf="@+id/whiteCard"
        app:layout_constraintTop_toTopOf="@+id/sixthPlace"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/bronzeCoin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/number3"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@+id/whiteCard"
        app:layout_constraintTop_toTopOf="@+id/number3"
        app:layout_constraintWidth_percent="0.045"
        app:srcCompat="@drawable/bronze" />


</androidx.constraintlayout.widget.ConstraintLayout>