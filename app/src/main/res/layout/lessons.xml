<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lessons">

    <ProgressBar
        android:id="@+id/BudgetingProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="261dp"
        android:layout_height="275dp"
        android:layout_marginTop="284dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="54dp" />

    <ImageView
        android:id="@+id/lessonsLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/financelingo_logo__2_"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="31dp"
        tools:visibility="gone" />

    <ImageButton
        android:id="@+id/budgetingButton"
        android:onClick="toLesson"
        android:layout_width="273dp"
        android:layout_height="300dp"
        android:layout_marginBottom="144dp"
        android:background="#00FFFFFF"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/financelingo__2_"
        tools:layout_editor_absoluteX="54dp" />

    <TextView
        android:id="@+id/budgetingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budgeting"
        android:textColor="@color/black"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="477dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="407dp"
        android:layout_height="455dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="1"
        app:srcCompat="@drawable/pig"
        tools:layout_editor_absoluteY="62dp" />


</androidx.constraintlayout.widget.ConstraintLayout>