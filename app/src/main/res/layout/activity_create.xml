<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple"
    android:tag="hide"
    tools:context=".Create">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="375dp"
        android:layout_height="479dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:srcCompat="@drawable/green_square" />

    <TextView
        android:id="@+id/createTitle"
        android:layout_width="114dp"
        android:layout_height="47dp"
        android:layout_marginTop="112dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="Create Account"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/user"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <EditText
        android:id="@+id/user"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="311dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_button"
        android:ems="10"
        android:hint="User ðŸ‘¤"
        android:inputType="text"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/createTitle"
        app:layout_constraintWidth_percent="0.7" />

    <EditText
        android:id="@+id/pw"
        android:layout_width="311dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Password ðŸ”’"
        android:inputType="textPassword"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintWidth_percent="0.7" />

    <EditText
        android:id="@+id/email"
        android:layout_width="311dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Email ðŸ‘¤"
        android:inputType="text"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/user"
        app:layout_constraintWidth_percent="0.7" />

    <Button
        android:id="@+id/createButton"
        android:layout_width="311dp"
        android:layout_height="34dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/roboto_light"
        android:onClick="makeAcc"
        android:paddingTop="-1dp"
        android:paddingBottom="-1dp"
        android:text="Create Account"
        android:textSize="14sp"
        app:backgroundTint="#7E7DBF"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintWidth_percent="0.7" />

    <Button
        android:id="@+id/showPw"
        android:layout_width="25dp"
        android:layout_height="34dp"
        android:layout_marginStart="278dp"
        android:layout_marginEnd="8dp"
        android:tag="hide"
        android:text="Button"
        android:onClick="showPw"
        app:layout_constraintBottom_toBottomOf="@+id/pw"
        app:layout_constraintEnd_toEndOf="@+id/pw"
        app:layout_constraintStart_toStartOf="@+id/pw"
        app:layout_constraintTop_toTopOf="@+id/pw" />


</androidx.constraintlayout.widget.ConstraintLayout>