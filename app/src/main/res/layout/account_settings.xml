<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7E7DBF">

    <ImageView
        android:id="@+id/green_card"
        android:layout_width="329dp"
        android:layout_height="585dp"
        android:background="@drawable/green_square"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Account"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/green_card"
        app:layout_constraintStart_toStartOf="@+id/green_card"
        app:layout_constraintTop_toTopOf="@+id/green_card" />

    <TextView
        android:id="@+id/profile_Picture_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="157dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Profile Picture"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/profile_Picture_Image"
        app:layout_constraintEnd_toStartOf="@+id/account_text"
        app:layout_constraintStart_toStartOf="@+id/account_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/change_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Change Email"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/change_Email_Button"
        app:layout_constraintStart_toStartOf="@+id/change_Email_Button"
        app:layout_constraintTop_toBottomOf="@+id/profile_Picture_Image" />

    <TextView
        android:id="@+id/change_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Change Password"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/change_Password_Button"
        app:layout_constraintStart_toStartOf="@+id/change_Password_Button"
        app:layout_constraintTop_toBottomOf="@+id/change_Email_Button" />

    <TextView
        android:id="@+id/classroom_Code_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Classroom Code"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/green_card"
        app:layout_constraintTop_toBottomOf="@+id/change_Password_Button" />

    <ImageView
        android:id="@+id/profile_Picture_Image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/change_email_text"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/profile_Picture_Edit_Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_Picture_Edit_Button"
        app:layout_constraintWidth_percent="0.1"
        app:srcCompat="@drawable/white_circle_button" />

    <Button
        android:id="@+id/profile_Picture_Edit_Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="94dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Edit"
        android:textSize="16sp"
        app:backgroundTint="#5C5C5C"
        app:layout_constraintBottom_toTopOf="@+id/change_Email_Button"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profile_Picture_Image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2" />

    <Button
        android:id="@+id/change_Email_Button"
        android:layout_width="247dp"
        android:layout_height="41dp"
        android:layout_marginStart="-15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/change_Email_text"
        android:fontFamily="@font/roboto_bold"
        android:text="Change Email"
        android:textSize="16sp"
        app:backgroundTint="#5C5C5C"
        app:layout_constraintEnd_toEndOf="@+id/green_card"
        app:layout_constraintStart_toStartOf="@+id/green_card"
        app:layout_constraintWidth_percent="0.6"
        tools:layout_editor_absoluteY="345dp" />

    <Button
        android:id="@+id/change_Password_Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="-15dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Change Password"
        android:textSize="16sp"
        app:backgroundTint="#5C5C5C"
        app:layout_constraintDimensionRatio="6:1"
        app:layout_constraintEnd_toEndOf="@+id/green_card"
        app:layout_constraintStart_toStartOf="@+id/green_card"
        app:layout_constraintTop_toBottomOf="@+id/change_password_text"
        app:layout_constraintWidth_percent="0.6" />

    <ImageButton
        android:id="@+id/lessons_Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/lessons_button"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.12" />


</androidx.constraintlayout.widget.ConstraintLayout>